BEGIN 
      DECLARE number,sum_of_Digits AS INTEGER 
	  PROMPT " Enter number to calculate to calculate Sum of Digits" AND STORE IN number
	   
	  sum_of_digits = calculate_sum(number)
	   
	  dispaly " Sum of the digits is "+sum_of_Digits
END

/**************************** 
   * MODULE NAME              : calculate_sum
   *INPUT PARAMETER           : INTEGER
   *RETURN TYPE               : integer
   *AUTHOR                    : ROHIT KANOJIA
   *CREATION DATE             : 22/08/2017
   *DESCRIPTION               : 
*************************************/
  INTEGER SUB calculate_sum(INTEGER number)
   
   DECLARE digits, Sum AS INTEGER
   INITIALIZE Sum   = 0
    WHILE (number > 0)
	do 
	digit = number % 10
	CALCULATE Sum = Sum + digit
	number / =10
	 
	 end while
	 
end sub

	
	 